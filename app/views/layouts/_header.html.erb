<div class="container">
  <div class="col-sm-6">
    <div class="logo">
      <%= link_to image_tag("logo.jpg", alt: t("alt.logo"),
        class: "img-responsive"), "#" %>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="shopping-item">
      <%= link_to image_tag("cart.png", alt: t("alt.cart"),
        class: "img-responsive"), current_cart %>
      <span id="cart_price" class="cart-amunt">
        <%= t "product.price", price: current_cart.total_price %>
      </span>
      <span id="cart_quantity" class="product-count">
        <%= current_cart.total_quantity %>
      </span>
    </div>
  </div>
</div>
<div class="mainmenu-area">
  <div class="container">
    <div class="row">
      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <li><%= link_to t("home"), "#" %></li>
          <li><%= link_to t("help"), "#" %></li>
          <li><%= link_to t("about"), "#" %></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if is_logged_in? %>
          <li class="margin_up">
            <div class="dropdown">
            <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Product
              <span class="carets"></span></button>
              <ul class="dropdown-menu">
              <li><%= link_to "New Product", new_admin_product_path,
                class: "btn-primary" %></li>
              <li><%= link_to "All Product", admin_products_path, class: "btn-primary" %></li>
              </ul>
             </div> 
             </li>
            <li><%= link_to "charts", admin_charts_path %><li> 
            <li><%= link_to "orders", admin_orders_path %><li> 
            <li><%= link_to "category", new_admin_category_path %><li> 
            <li><%= link_to "users", admin_users_path %><li>
            <li><%= link_to "suggest", admin_suggest_products_path %><li>
            <li><%= link_to t("signout"), signout_path, method: :delete,
              class: "glyphicon glyphicon-user" %>
            </li>
          <% else %>
            <li><%= link_to t("signin"), "#", class: "glyphicon glyphicon-user", 
              remote: true, data: {toggle: "modal", target: "#login_form"} %>
            </li>
          <% end %>
          <li><%= render "shared/search_form" %></li>
        </ul>
      </div>
    </div>
  </div>
</div>
<% unless is_logged_in? %>
  <%= render "shared/user_authenticate" %>
<% end %>
